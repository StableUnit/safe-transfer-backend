{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "dist/js",
        "rootDir": "./../",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/types/*.ts",
        "node_modules",
        ".vscode"
    ]
}